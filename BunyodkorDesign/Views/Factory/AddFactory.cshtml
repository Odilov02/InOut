 @using Application.Common.Dtos.FactoryDtos;
@{
    Layout = "_AdminLayout";
}
@model AddFactoryDto

@{
    if (ViewData["result"] is not null)
    {
        if ((int)ViewData["result"]! > 0)
        {
            <div class="row">
                <div class="col">
                </div>
                <div class="col-8 mt-3">
                    <h3 style="background-color: rgb(132, 253, 184);" class="shadow  rounded text-center py-3" id="HtmlTeg">
                        Маьлумотлар мувоффақиятли қўшилди!
                    </h3>
                </div>
                <div class="col"></div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col">
                </div>
                <div class="col-8 mt-3">
                    <h3 style="background-color: rgb(252, 113, 109);" class="shadow  rounded text-center py-3" id="HtmlTeg">
                        Маьлумотлар қўшилмади!
                    </h3>
                </div>
                <div class="col"></div>
            </div>
        }
    }
}
<style>
    form {
        background-color: #fff;
        max-width: 670px;
        margin: 30px auto;
        padding: 30px 20px;
        box-shadow: 2px 5px 10px rgba(0, 0, 0, 0.5);
    }

    .form-control {
        text-align: left;
        margin-bottom: 25px;
    }

        .form-control label {
            display: block;
            margin-bottom: 10px;
        }

        .form-control input,
        .form-control select,
        .form-control textarea {
            border: 1px solid #777;
            border-radius: 2px;
            font-family: inherit;
            padding: 10px;
            display: block;
            width: 95%;
        }

            .form-control input[type="radio"],
            .form-control input[type="checkbox"] {
                display: inline-block;
                width: auto;
            }

</style>

<!-- Create Form -->
<form id="form" asp-action="AddFactory" method="post">
    <h3 class="mx-2" id="demo"></h3>
    <!-- Details -->
    <div class="form-control">
        <label for="FullName" id="FullName">
            Завод номи
        </label>

        <!-- Input Type Text -->
        <input type="text" id="FullName" name="FullName"
               placeholder="Завод номини киритинг..." />
        <span class="text-danger" asp-validation-for="FullName"></span>
    </div>
   
    <div class="form-control">
        <label for="Description">
            Завод хақида маълумот
        </label>

        <textarea name="Description" id="Description"
                  placeholder="Завод хақида маълумот киритинг..."></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="row">
        <div class="col-xs-0 col-md-1">
        </div>
        <div class="col-4 mx-2 mx-md-1">
            <button type="submit" class="btn btn-success my-4 px-5" onclick="submitNumber()">
                Сақлаш
            </button>
        </div>
        <div class="col-5 mx-4 d-flex justify-content-end">
            <a asp-action="GetAllFactory" asp-controller="Factory" class="btn btn-primary my-4 px-5">Орқага</a>
        </div>
        <div col-1>
        </div>
    </div>
</form>
<script>
    const myInterval = setInterval(myTimer);

    function myTimer() {
        const date = new Date();
        document.getElementById("demo").innerHTML = date.toLocaleTimeString();
    }
    function removeTeg() {
        var element = document.getElementById("HtmlTeg");
        element.parentNode.removeChild(element);
    }
    setTimeout(removeTeg, 3000);
</script>
