@using Application.Common.Models;
@using Domain.Entities;
@{
    Layout = "_AdminLayout";
}
<br />
@model List<AllSpend>
@{
    if (ViewData["result"] is not null)
    {
        if ((int)ViewData["result"]! == 1)
        {
            <div class="row">
                <div class="col">
                </div>
                <div class="col-8 mt-3">
                    <h3 style="background-color: rgb(132, 253, 184);" class="shadow mb-5  rounded text-center py-3" id="HtmlTeg">
                        Маьлумотлар муваффақиятли ўчирилди
                    </h3>
                </div>
                <div class="col"></div>
            </div>
        }
        else if ((int)ViewData["result"]! == -1)
        {
            <div class="row">
                <div class="col">
                </div>
                <div class="col-8 mt-3">
                    <h3 style="background-color: rgb(252, 113, 109);" class="shadow mb-5  rounded text-center py-3" id="HtmlTeg">
                        Маьлумотларни ўчириб бўлмайди
                    </h3>
                </div>
                <div class="col"></div>
            </div>
        }
        else if ((int)ViewData["result"]! == 2)
        {
            <div class="row">
                <div class="col">
                </div>
                <div class="col-8 mt-3">
                    <h3 style="background-color: rgb(132, 253, 184);" class="shadow mb-5  rounded text-center py-3" id="HtmlTeg">
                        Маьлумотлар  муваффақиятли ўзгартирилди
                    </h3>
                </div>
                <div class="col"></div>
            </div>
        }
        else if ((int)ViewData["result"]! == -2)
        {
            <div class="row">
                <div class="col">
                </div>
                <div class="col-8 mt-3">
                    <h3 style="background-color: rgb(252, 113, 109);" class="shadow mb-5  rounded text-center py-3" id="HtmlTeg">
                        Маьлумотларни  ўзгартириб бўлмайди
                    </h3>
                </div>
                <div class="col"></div>
            </div>
        }
    }
}
<div class="row py-2">
    <div class="col-12 col-md-5 py-2">
        <h3 class="text-center">Умумий чиқимлар</h3>
    </div>
    <div class="col-4 col-md-3 py-2 d-flex justify-content-center">
        <div class="form-group">
            <div class="input-group" value=" ">
                <input type="text" id="Search" placeholder="Қидирмоқ..." class="form-control ">
            </div>
        </div>
    </div>
    <div class="col-4 col-md-2 py-2 d-flex justify-content-center">
        <button class="btn btn-success" onclick="exportToExcel()">Йуклаб олиш</button>
    </div>
    <div class="col-4 col-md-2 py-2 d-flex justify-content-center">
        <a asp-action="Choose" asp-controller="Construction" asp-route-constructionId="@ViewData["constructionId"]" class="btn btn-primary px-3">Орқага</a>
    </div>
</div>
<div class="overflow-auto">

    <table id="dataTable" class="table table-bordered table-success table-striped table-hover">
        <thead>
            <tr>
                <th class="text-center" scope="col"></th>
                <th class="text-center" scope="col">Тури</th>
                <th class="text-center" scope="col">Вақти</th>
                <th class="text-center" scope="col">Суммаси</th>
                <th class="text-center" scope="col">Чиқим тури </th>
                <th class="text-center" scope="col">Сабаби</th>
                <td colspan="2"></td>
            </tr>
            <tr id="filterRow">
                <td></td>
                <td>
                    <input type="text" class="form-control" id="AdminOrUserFilter" placeholder="Қидирмоқ.." />
                </td>
                <td>
                    <input type="text" class="form-control" id="DateFilter" placeholder="Қидирмоқ..." />
                </td>
                <td class="price">
                    <input class="form-control" type="text" id="PriceFilter" placeholder="Қидирмоқ...">
                </td>
                <td>
                    <input type="text" class="form-control" id="SpendTypeFilter" placeholder="Қидирмоқ...">
                </td>
                <td>
                    <input type="text" class="form-control" id="ReasonFilter" placeholder="Қидирмоқ...">
                </td>
                <td colspan="2"></td>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 1;
                foreach (var item in Model)
                {
                    <tr class="Search">
                        <th scope="row">@count</th>
                        <td class="text-center">@item.AdminOrUser</td>
                        <td class="text-center">@item.Date.ToString("HH:mm dd.MM.yyyy")</td>
                        <td id="formattedNumberPrice" class="text-center price">@item.Price</td>
                        <td class="text-center">@item.SpendType</td>
                        <td class="text-center">@item.Reason</td>
                        <td class="text-center">
                            <a asp-controller="Spend" asp-action="UpdateSpendForAdmin" asp-route-id="@item.Id" class="btn btn-primary">Ўзгартириш</a>
                        </td>
                        <td colspan="2" class="text-center">
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#@item.Id">
                                Ўчириш
                            </button>
                            <div class="modal fade" id="@item.Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="@item.Id+Label" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header bg-danger text-white">
                                            <h2 class="modal-title mx-5" id="@item.Id+Label">Чиқимни ўчириш</h2>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body bg-info text-dark">
                                            <h3 class="mx-4">Суммаси:</h3>
                                            <h5 class="mx-4 ">@item.Price</h5>
                                            <h3 class="mx-4">Вақти:</h3>
                                            <h5 class="mx-4">@item.Date.ToString("HH:mm dd.MM.yyyy")</h5>
                                            <h3 class="mx-4">Сабаби:</h3>
                                            <h5 class="mx-4">@item.Reason</h5>
                                        </div>
                                        <div class="modal-footer bg-info text-dark">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Орқага</button>
                                            <a asp-controller="Spend" asp-action="DeleteSpendForAdmin" asp-route-id="@item.Id" class="btn btn-danger">Ўчириш</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>

                    count++;
                }
                <tr class="total-row">
                    <th scope="row">Жами</th>
                    <td colspan="2"></td>
                    <th class="text-center" id="totalPrice"></th>
                    <td colspan="4"></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    function removeTeg() {
        var element = document.getElementById("HtmlTeg");
        element.parentNode.removeChild(element);
    }
    setTimeout(removeTeg, 3000);
    $(document).ready(function () {
        function contains(text_one, text_two) {
            return text_one.indexOf(text_two) != -1;
        }

        $("#Search").keyup(function () {
            var searchtext = $("#Search").val().toLowerCase();

            // Barcha yashirilgan qatorlarni olib tashlash
            var hiddenRows = $(".Search:hidden");

            // Barcha yashirilgan qatorlarni hiddenRowsContainer ga joylashtirish
            $("#hiddenRowsContainer").empty(); // Avvalgi ma'lumotlarni tozalash
            $("#hiddenRowsContainer").append(hiddenRows);


            $(".Search").each(function () {
                if (!contains($(this).text().toLowerCase(), searchtext)) {
                    $(this).hide();
                } else {
                    $(this).show();
                }
            });
            var totalAmount = 0;

            $(".Search:visible .price").each(function () {
                var price = parseFloat($(this).text().replace(/\s/g, ''));
                totalAmount += price;
            });

            // Jami pricelarni chiqarish
            document.getElementById("totalPrice").innerText = totalAmount.toLocaleString('en').replace(/,/g, ' ');
        });
    });
    function filterTable() {
        var turFilter = document.getElementById("AdminOrUserFilter").value.toLowerCase();
        var vaktFilter = document.getElementById("DateFilter").value.toLowerCase();
        var narxFilter = document.getElementById("PriceFilter").value.toLowerCase();
        var chiqimFilter = document.getElementById("SpendTypeFilter").value.toLowerCase();
        var sababFilter = document.getElementById("ReasonFilter").value.toLowerCase();

        var rows = document.querySelectorAll("#dataTable tbody .Search");
        var totalAmount = 0;
        rows.forEach(function (row) {
            var tur = row.cells[1].innerText.toLowerCase();
            var vakti = row.cells[2].innerText.toLowerCase();
            var narxi = row.cells[3].innerText.toLowerCase();
            var chiqimTuri = row.cells[4].innerText.toLowerCase();
            var sababi = row.cells[5].innerText.toLowerCase();
            var priceFormat = parseFloat(row.cells[3].innerText.replace(/\s/g, ''));
            if (tur.includes(turFilter) && vakti.includes(vaktFilter) && narxi.includes(narxFilter) && chiqimTuri.includes(chiqimFilter) && sababi.includes(sababFilter)) {
                var price = priceFormat;
                totalAmount += price;
                row.style.display = "";
            } else {
                row.style.display = "none";
            }
            row.cells[3].innerText = priceFormat.toLocaleString('en').replace(/,/g, ' ');
            document.getElementById("totalPrice").innerText = totalAmount.toLocaleString('en').replace(/,/g, ' ');
        });
    }

    // Input o'zgarishlari uchun filtratsiya qilish
    document.querySelectorAll("#filterRow input").forEach(function (input) {
        input.addEventListener("keyup", filterTable);
    });

    filterTable();



    //<=======================================>
    function exportToExcel() {
        const table = document.getElementById('dataTable');
        const wb = XLSX.utils.table_to_book(table, { sheet: "Sheet1" });
        const wbout = XLSX.write(wb, { bookType: 'xlsx', type: 'binary' });

        function s2ab(s) {
            const buf = new ArrayBuffer(s.length);
            const view = new Uint8Array(buf);
            for (let i = 0; i < s.length; i++) view[i] = s.charCodeAt(i) & 0xFF;
            return buf;
        }

        const blob = new Blob([s2ab(wbout)], { type: "application/octet-stream" });
        const fileName = "data.xlsx";

        if (window.navigator && window.navigator.msSaveOrOpenBlob) {
            window.navigator.msSaveOrOpenBlob(blob, fileName);
        } else {
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement("a");
            document.body.appendChild(a);
            a.href = url;
            a.download = fileName;
            a.click();
            window.URL.revokeObjectURL(url);
            document.body.removeChild(a);
        }
    }
</script>
